{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Build for Debugging",
			"command": "/bin/bash",
			"args": [
				"./scripts/buildForDebugger.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "cppbuild",
			"label": "Build for Production",
			"command": "/bin/bash",
			"args": [
				"./scripts/build.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}